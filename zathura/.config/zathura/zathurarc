set statusbar-fg \#C5C8C6

set inputbar-bg \#1D1F21
set inputbar-fg \#C5C8C6

set notification-bg \#1D1F21
set notification-fg \#C5C8C6

set highlight-color \#A54242
set highlight-active-color \#8C9440

