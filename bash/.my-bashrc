# clip
alias clip='xclip -selection clipboard -r'
alias clipo='xclip -selection clipboard -o'

## empty the message file and then edit any copy
vl(){
	echo -n > ~/p/message
	wl
}
## write clipboard to the message file and then edit any copy
el(){
	clipo > ~/p/message
	wl
}
## write and copy the message file
wl(){
	$EDITOR ~/p/message
	if [ -f ~/p/message ];then
		clip < ~/p/message
	else
		echo Could not open message file >/dev/stderr
	fi
}


# edits
e(){
	if [[ "$#" -eq 0 ]];then
		cd ~/p/test
	fi

	case $1 in
	b|ba|bash)
		$EDITOR ~/.my-bashrc +;;
	v)
		$EDITOR ~/.vimrc;;
	bs|bspwm)
		$EDITOR ~/.config/bspwm/bspwmrc;;
	sx|sxhkd)
		$EDITOR ~/.config/sxhkd/sxhkdrc;;
	r|ra|rasi)
		$EDITOR ~/.config/rofi/config.rasi;;
	pc)
		$EDITOR ~/.config/polybar/config;;
	pl)
		$EDITOR ~/.config/polybar/launch.sh;;
	z|za)
		$EDITOR ~/.config/zathura/zathurarc;;
	t|tmux)
		$EDITOR ~/.tmux.conf;;
	s|ssh)
		$EDITOR ~/.ssh/config;;
	n|nvim)
		cd ~/.config/nvim/
		$EDITOR ~/.config/nvim/init.vim;;
	y)
		$EDITOR ~/.config/nvim/init.lua;;
	g|git)
		$EDITOR ~/.gitconfig;;
	esac
}

