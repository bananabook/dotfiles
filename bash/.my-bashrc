# tmux
alias t="tmux"
alias tt="tmux attach||tmux"

te(){
	tmux "$@" ;exit
}
ta(){
	tmux attach "$@"
}
tl(){
	tmux "$@" ls
}
tae(){
	tmux attach "$@";exit
}


# clip
alias clip='xclip -selection clipboard -r'
alias clipo='xclip -selection clipboard -o'

vl(){
	echo -n > ~/p/message
	el
}
el(){
	$EDITOR ~/p/message
	if [ -f ~/p/message ];then
		clip < ~/p/message
	fi
}


# edits
e(){
	if [[ "$#" -eq 0 ]];then
		cd ~/p/test
	fi

	case $1 in
	b|ba|bash)
		$EDITOR ~/.my-bashrc +;;
	v)
		$EDITOR ~/.vimrc;;
	bs|bspwm)
		$EDITOR ~/.config/bspwm/bspwmrc;;
	sx|sxhkd)
		$EDITOR ~/.config/sxhkd/sxhkdrc;;
	r|ra|rasi)
		$EDITOR ~/.config/rofi/config.rasi;;
	pc)
		$EDITOR ~/.config/polybar/config;;
	pl)
		$EDITOR ~/.config/polybar/launch.sh;;
	z|za)
		$EDITOR ~/.config/zathura/zathurarc;;
	t|tmux)
		$EDITOR ~/.tmux.conf;;
	s|ssh)
		$EDITOR ~/.ssh/config;;
	n|nvim)
		$EDITOR ~/.config/nvim/init.vim;;
	g|git)
		$EDITOR ~/.gitconfig;;
	esac
}

