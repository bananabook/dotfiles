# programs
## kitty
super + c
	kitty -T Δ tmux
super + ctrl + c
	kitty -T Δ
## firefox
super + f
	firefox -P simple
## rofi
super + space
	rofi -show drun -m -1 -disable-history -sort -theme ~/.config/rofi/example.rasi
super + shift + space
	rofi -show window -m -1 -theme ~/.config/rofi/example.rasi
super + alt + space
	rofi -show window -m -1 -theme ~/.config/rofi/example.rasi

# quit/restart bspwm
super + {ctrl + F4,ctrl + F5}
	bspc {quit,wm -r}

# Toggle polybar
super + n
	{polybar-msg cmd show;\
	bspc config -m primary bottom_padding 20,\
	bspc config -m primary bottom_padding 0;\
	polybar-msg cmd hide}

# focus/move the node in the given direction
super + {a,s,w,d}
	bspc node -f {west,south,north,east}
super + {_,shift + }{q,e}
	bspc {desktop -f,node -d} {prev,next}.local

super + shift + a
	if bspc query -N focused.floating >/dev/null;then \
		bspc node -v -20 0;\
	else \
		bspc node -s west;\
	fi
super + shift + s
	if bspc query -N focused.floating >/dev/null;then \
		bspc node -v 0 20;\
	else \
		bspc node -s south;\
	fi
super + shift + w
	if bspc query -N focused.floating >/dev/null;then \
		bspc node -v 0 -20;\
	else \
		bspc node -s north;\
	fi
super + shift + d
	if bspc query -N focused.floating >/dev/null;then \
		bspc node -v 20 0;\
	else \
		bspc node -s east;\
	fi

# resize
super + alt + {a,s,w,d}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}
super + alt + shift + {a,s,w,d}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# close and kill
super + {ctrl,ctrl + alt +} @x
	bspc node -{c,k}

# multi monitor commands
super + ctrl + {_,alt +} Tab
	bspc monitor -{f,d} next 

# media control
super + less
	playerctl play-pause
XF86AudioPlay
	playerctl play-pause
super + m
	if [[ $(pgrep unclutter) ]];then A=1; killall unclutter; else A=0; fi;xmouseless;if [[ "$A" == 1 ]];then unclutter  -idle 1 --start-hidden ; fi

# floating
## focus the next/previous node in the current desktop
super + Tab
	bspc node -f next.local.floating

super + t
	bspc node -t floating
super + shift + t
	bspc node -t tiled
super + z
	bspc desktop -l monocle
super + shift + z
	bspc desktop -l tiled

# screen lock
super + Escape
	xlock -echokeys -echokey '*' -mode blank -background \#1d1f21 &\
	playerctl pause

